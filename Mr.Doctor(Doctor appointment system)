int main()
{
    int enter,choice,spec_num,nex,m;
    int num;
    info pa;
    Q *p;
    p=(Q*)malloc(sizeof(Q));
    p->front = NULL;
    p->rear = NULL;
    printf("\n\n\n\n                                        ---------Welcome---------     \n\n ");
    printf("\n                                                   To      \n");
    printf("\n\n                                       ---------MR.DOCTOR---------\n\n");
    printf("\nPress 0 for continue\n");
    printf("\nEnter Your choice : ");
    scanf("%d",&enter);
    if(enter==0)
    {
        label1_login:
        system("cls");
        printf("Login As:\n");
        printf("    1. Patient");
        printf("\n    2. Admin Panel\n");
        printf("\nEnter Your choice : ");
        scanf("%d",&choice);
        if(choice == 1)
        {
            label2_doc:
            doctor_type();
            printf("\nEnter Your choice : ");
            scanf("%d",&spec_num);
            label3_lis:
            doc_list(spec_num);
            printf("\n'Press 0 to Go-back'\n");
            printf("\nEnter Your choice : ");
            scanf("%d",&num);
            if(num == 0)
            {

                goto label2_doc;
            }
            else
            {
                switch(spec_num)
                {
                    case 1:
                        system("cls");
                        Med_spec_details(num,&pa);
                        pa.Do_name;
                        break;
                    case 2:
                        system("cls");
                        Nuero_details(num,&doctor);
                        pa.Do_name;
                        break;
                    case 3:
                        system("cls");
                        Cancer_spe_details(num,&doctor);
                        pa.Do_name;
                        break;
                }
            }

            printf("\nDo You Want to make A apointment:\n 1. Yes\n 2. No(Go-back)\n");
            printf("\nEnter Your choice : ");
            scanf("%d",&nex);
            if (nex==1)
            {
                patient(&pa);
                input(&p,&pa);
                system("cls");
                printf("\n\n\n\n                You Have Successfully Complete Your Appointment !!!!!!!!!           \n\n");
                printf("\n\nIf You Want to Go Admin-Panel Press 1 or press 0 for exit !!!");
                printf("\nEnter Your choice:");
                scanf("%d",&m);
                if(m==1)
                {
                    output(&p);
                    printf("\n\n\n");
                    printf("If You Want to Go-back to Login-Panel Press 1 or press 0 for exit !!!");
                    printf("\nEnter Your choice : ");
                    int r;
                    scanf("%d",&r);
                    if(r==1)
                    {
                        goto label1_login;
                    }
                }

            }
            else if(nex==2)
            {
                goto label3_lis;
            }

        }
        else if(choice==2)
        {
            output(&p);
            printf("\n\n\n");
            printf("If You Want to Go-back to Login-Panel Press 1 or press 0 for exit !!!");
            printf("\nEnter Your choice : ");
            int r;
            scanf("%d",&r);
            if(r==1)
            {
                goto label1_login;
            }

        }
        else
        {
            system("cls");
            printf("\n\n\n\n          You have Enter a wrong Number!!!!!!!!      \n\n\n\n\n ");
        }
    }
    else
        {
            system("cls");
            printf("\n\n\n\n          You have Enter a wrong Number!!!!!!!!      \n\n\n\n\n ");
        }

return 0;
}
